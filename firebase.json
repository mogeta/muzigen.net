{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [{
      "source": "**/*.@(jpg|jpeg|gif|png)",
      "headers": [ {
        "key": "Cache-Control",
        "value": "max-age=86400"
      }]
    }, {
      "source": "**/*.@(js|css)",
      "headers": [ {
        "key": "Cache-Control",
        "value": "max-age=604800"
      }]
    }],
    "rewrites": [
      {
        "source": "/brave-rewards-verification.txt",
        "destination": "/brave-rewards-verification.txt"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
